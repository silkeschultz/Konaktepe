<style>
  footer {
    background-color: rgba(57, 39, 29, 1);
    color: white;
    padding: 3rem 2rem;
    box-sizing: border-box;
  }
  .footer-info {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    align-items: start;
  }
  .footer-info > section {
    flex-direction: column;
    text-align: center;
    align-items: center;
  }

  .some-logos {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .some-logos img {
    height: 40px;
    width: auto;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
    cursor: pointer;
  }
  .some-logos img:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 0 8px rgba(244, 239, 233, 1)) drop-shadow(0 0 8px rgba(255, 255, 255, 0.5));
  }
  article .btn {
    display: inline-block;
    padding: 0.9rem 1.7rem;
    background-color: transparent;
    color: rgba(244, 239, 233, 1);
    text-decoration: none;
    border: 1px solid rgba(244, 239, 233, 1);
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.18);
    transition:
      background 0.2s ease,
      color 0.2s ease;
  }
  footer .btn:hover,
  footer .btn:focus {
    box-shadow: 0 6px 14px rgba(0, 0, 0, 0.22);
    text-decoration: none;
    background-color: rgba(244, 239, 233, 1);
    color: rgba(57, 39, 29, 1);
  }

  .logo {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .logo img {
    max-width: 180px;
    width: 100%;
    height: 60px;
    transition:
      transform 0.3s ease,
      filter 0.3s ease;
    cursor: pointer;
  }
  .logo img:hover {
    transform: scale(1.05);
    filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.8)) drop-shadow(0 0 8px rgba(255, 255, 255, 0.5));
  }

  /* Responsiv */
  @media (max-width: 520px) {
    .footer-info {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    footer {
      padding: 1.75rem 1rem;
    }
    .logo img {
      max-width: 140px;
    }
    .some-logos img {
      height: 36px;
    }
  }
</style>
