  }

  .some-logos {
    display: flex;
    gap: 1rem;
    align-items: center;
    justify-content: center;
  }

  .some-logos img {
    height: 40px;
    width: auto;
  }

  .logo {
    margin-top: 2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  .logo img {
    max-width: 180px;
    width: 100%;
    height: auto;
  }

  /* Responsiv */
  @media (max-width: 520px) {
    .footer-info {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
    footer {
      padding: 1.75rem 1rem;
    }
    .logo img {
      max-width: 140px;
    }
    .some-logos img {
      height: 36px;
    }
  }
</style>
