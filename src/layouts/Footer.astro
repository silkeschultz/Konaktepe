<style>
  footer {
    background-color: rgba(57, 39, 29, 1);
    color: white;
    /* max-width: 1200px; */
    margin: 0 auto;
    padding: 3rem 2rem;
    box-sizing: border-box;
  }
  .footer-info {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    align-items: start;
  }
  .footer-info > section {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
