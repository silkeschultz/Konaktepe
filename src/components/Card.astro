---
const { data } = Astro.props;
---

<a href=`/single/${data.id}`>
  <section>
    <img src=`https://yvsqeurljhxwfykzgfyb.supabase.co/storage/v1/object/public/konaktepe_images/${data.image}` alt="product image" />
    <h2>{data.productname}</h2>
  </section>
</a>

<style>
  img {
    width: 100%;
    height: auto;
  }
  section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
  }
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
